@model PetShop.Models.Category
@Html.Partial("MenuBar")

<html>
<head>

</head>
<body>
    
    
    <div class="big-title">
        <h1>
            CATALOG
            <span>@Html.Partial("SelectCategory")</span>
        </h1>
    </div>
    <div class="category-name">
        <h1>
            <span>@Model.Name</span>
        </h1>
    </div>

    @if (Model.animals?.Count > 0)
    {
        <div class="flex-container">
            @foreach (var animal in Model.animals)
            {
                <article class="flex-items article-card">
                <div class="small-title"><h1>@animal.Name</h1></div>
                <img class="center" src="@animal.Picture" width="100" height="100">
                    <div class="center">@Html.ActionLink("Animal Page","AnimalPage","Catalog",new{animal.Id},new{@class="link"})</div>
                </article>
            }
        </div>
    }
</body>
</html>
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">