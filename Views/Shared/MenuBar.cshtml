
<html>
<head>
    <style>
        .topnav {
    background-color: #333;
    overflow: hidden;
}
    .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
    }
        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }
        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }

    </style>
</head>
<body>

    <div class="topnav">
              <a class="active" @Html.ActionLink("Home","Index","Home")></a>
              <a @Html.ActionLink("Catalog","Index","Catalog")></a> 
              <a @Html.ActionLink("Admin","Index","Admin")></a>
  
</div>
</body>
</html>
